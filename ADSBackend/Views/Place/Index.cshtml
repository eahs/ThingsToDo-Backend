@model List<ADSBackend.Models.PlaceViewModels.PlaceViewModel>

    @{
        ViewData["Title"] = "Place";
    }

    <div class="ibox">
        <div class="ibox-title">
            <h2>Places</h2>
            <p>
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            </p>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Location)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.PlaceId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.PlaceId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.PlaceId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
